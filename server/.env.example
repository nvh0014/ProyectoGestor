# ===== CONFIGURACIÓN DEL SERVIDOR =====
PORT=3001
# Cambiar a 'production' para producción
NODE_ENV=development

# ===== CONFIGURACIÓN DE BASE DE DATOS =====
# Host donde está la base de datos
DB_HOST=localhost

# Puerto de MySQL (estándar es 3306, NO confundir con puerto del servidor)
DB_PORT=3306

# Nombre de la base de datos
DB_NAME=gestor

# Credenciales de la base de datos
DB_USER=root
DB_PASSWORD=tu_password_aqui

# ===== CONFIGURACIÓN DE SEGURIDAD =====
# Clave para migración de contraseñas (solo para admin)
ADMIN_MIGRATION_KEY=MIGRATE_PASSWORDS_2025

# ===== CONFIGURACIÓN DE CORS =====
# URLs permitidas para CORS
FRONTEND_URL=https://gestorcerronegro.vercel.app

# ===== CONFIGURACIÓN DE BCRYPT =====
# Número de rondas de salt para bcrypt (más alto = más seguro pero más lento)
SALT_ROUNDS=12
